#!/bin/sh

ROOT=$(cd $(dirname $0) && cd .. && pwd)
PID=$ROOT/tmp/pids/judy.pid
LOG=$ROOT/log/judy.log

is_running() {
  [ -e $PID ] && kill -0 $(cat $PID)
}

start() {
  if is_running; then
    echo "Judy(pid: $(cat $PID)) is already started."
  else
    echo "Starting judy..."
    mkdir -p $(dirname $LOG)
    mkdir -p $(dirname $PID)
    nohup bundle exec ruboty --dotenv >> $LOG 2>&1 &
    echo $! > $PID
  fi
}

stop() {
  if is_running; then
    echo "Stopping judy."
    kill $(cat $PID)
    rm $PID
  else
    echo "Judy is already stopped."
    rm -rf $PID
  fi
}

status() {
  if is_running; then
    echo "Judy(pid: $(cat $PID)) is running."
  else
    echo "Judy is not running."
    rm -rf $PID
  fi
}

case "$1" in
  start)
    start
    ;;
  stop)
    stop
    ;;
  restart)
    stop
    start
    ;;
  status)
    status
    ;;
  *)
    echo "Usage: $0 {start|stop|status}"
esac
